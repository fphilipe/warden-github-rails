<h2>
  <%= image_tag @user.rels[:avatar].href, width: 50, height: 50 %>
  <%= @user.login %>
  <%- if @user.name.present? %>
  (<%= @user.name %>)
  <%- end -%>
</h2>

<dl>
  <dt>Company:</dt>
  <dd><%= @user.company %></dd>
  <dt>Website:</dt>
  <dd><%= @user.blog %><dd>
  <dt>Bio:</dt>
  <dd><%= @user.bio %><dd>
</dl>

<h3>Repositories</h3>
<%- if @repos.empty? -%>
<p>Looks like this user has no repos :-(</p>
<%- else -%>
<dl>
  <%- @repos.each do |repo| -%>
  <dt><%= link_to repo.name, repo.rels[:html].href %></dt>
  <dd><%= repo.description %></dd>
  <%- end -%>
</dl>
<%- end -%>
